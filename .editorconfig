# EditorConfig for indents, https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Match all .cpp, .h files
[*.{cpp,h,md}]
indent_style = tab
indent_size = 4

[*.{cpp,h}]
trim_trailing_whitespace = true